<%- model_class = Pdf -%>
<div class="page-header">
  <h1 style="color:Royalblue;"><%= @pdf.name%></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>File:</strong></dt>
  <dd><%= link_to ("Open #{@pdf.name}"),@pdf.file_pdf.url, :class => 'helpers.links'%>

  </dd>

 </br>
 
  <dt><strong><%="Status" %>:</strong></dt>
  <dd><%= @pdf.tags %></dd>

  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @pdf.description %></dd>

  <dt><strong><%= model_class.human_attribute_name(:state) %>:</strong></dt>
  <dd><%= @pdf.state %></dd>
</dl>


<%= link_to t('.back', :default => t("helpers.links.back")),
              pdfs_path, :class => 'btn btn-default active'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_pdf_path(@pdf), :class => 'btn btn-default active' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              pdf_path(@pdf),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger active' %></br></br>

<iframe src= <%= @pdf.file_pdf.url %> style="width:70%; height:540px;  padding-left:15%;" frameborder="0"></iframe>