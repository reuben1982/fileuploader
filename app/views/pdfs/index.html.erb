<%- model_class = Pdf -%>
<div class="page-header">
  <h1>Listing Files</h1>
</br>
  <%= search_form_for @search do |f| %>
  <div class="field">
    <%= f.label :name_cont, "Name contains" %>
    <%= f.text_field :name_cont %><%= f.submit "Search" %>
  </div>
  <div class="actions"></div>
<% end %>
</br>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:tags) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @pdfs.each do |pdf| %>
      <tr>
        <td><%= link_to pdf.id, pdf_path(pdf) %></td>
        <td><%= pdf.name %></td>
        <td><%= pdf.tags %></td>
        <td><%= pdf.description %></td>
        <td><%=l pdf.created_at %></td>
        <td>
         
          <%= link_to t('.view'),pdf.file_pdf.url, :class => 'btn btn-xs btn-warning'  %>          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_pdf_path(pdf), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      pdf_path(pdf),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.AddFile', :default => t("helpers.links.AddFile")),
            new_pdf_path,
            :class => 'btn btn-primary' %>
